module naive_plus

signature
  
  sorts Exp
  constructors
    Plus : Exp * Exp -> Exp
    Num : Int -> Exp
  
  arrows
    Exp --> Exp
    
  native operators
    plusI  : Int * Int -> Int  
  
rules
  
  Num(n) --> Num(n).
  
  Plus(e1, e2) --> Num(plusI(n1, n2))
  where
    e1 --> Num(n1);
    e2 --> Num(n2).